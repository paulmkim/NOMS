<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.noms.noms.friends_folder.friends"
    android:background="@color/gray">

    <ListView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/friend_list_event_members"
        android:layout_marginTop="50dp">

    </ListView>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Friend"
        android:id="@+id/add_friend_friends"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/friend_list_event_members"
        android:layout_alignEnd="@+id/friend_list_event_members"
        android:background="@drawable/button_main_color"/>

</RelativeLayout>
