<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.noms.noms.events_folder.event_details"
    android:background="@color/gray">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/event_details_event_name"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="30dp"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Creator:"
        android:id="@+id/creator_event_details"
        android:layout_below="@+id/event_details_event_name"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="30dp"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/temp_creator_event_details"
        android:layout_alignBottom="@+id/creator_event_details"
        android:layout_toRightOf="@+id/creator_event_details"
        android:layout_marginLeft="20dp"
         />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Address:"
        android:id="@+id/address_event_details"
        android:layout_marginTop="15dp"
        android:textStyle="bold"
        android:layout_below="@+id/textView8"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/temp_address_event_details"
        android:layout_alignBottom="@id/address_event_details"
        android:layout_alignLeft="@+id/temp_duration_event_details"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Respond"
        android:textSize="20sp"
        android:id="@+id/textView5"
        android:textColor="@color/text_color"
        android:textStyle="bold"
        android:layout_below="@+id/temp_address_event_details"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView6"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/textView5" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Going"
        android:id="@+id/going_button_event_details"
        android:layout_marginTop="10dp"
        android:width="110dp"
        android:background="@drawable/button_main_color"
        android:layout_below="@+id/textView5"
        android:layout_marginRight="10dp"
        android:layout_alignRight="@+id/textView6" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Not Going"
        android:id="@+id/not_going_button_event_details"
        android:layout_alignTop="@+id/going_button_event_details"
        android:width="110dp"
        android:layout_alignLeft="@+id/textView6"
        android:layout_marginLeft="10dp"
        android:background="@drawable/button_main_color"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Attending"
        android:textSize="20sp"
        android:id="@+id/attending_text_event_details"
        android:layout_marginTop="20dp"
        android:textColor="@color/text_color"
        android:textStyle="bold"
        android:layout_below="@+id/going_button_event_details"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Invited"
        android:id="@+id/no_response_button_event_details"
        android:width="110dp"
        android:background="@drawable/button_secondary_color"
        android:layout_below="@+id/attending_text_event_details"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"/>


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Going"
        android:id="@+id/others_going_button_event_details"
        android:layout_alignBottom="@+id/no_response_button_event_details"
        android:layout_toLeftOf="@+id/no_response_button_event_details"
        android:layout_toStartOf="@+id/no_response_button_event_details"
        android:width="130dp"
        android:background="@drawable/button_secondary_color"
        android:layout_marginRight="10dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Not Going"
        android:id="@+id/others_not_going_button_event_details"
        android:layout_alignBottom="@+id/no_response_button_event_details"
        android:layout_toRightOf="@+id/no_response_button_event_details"
        android:layout_toEndOf="@+id/no_response_button_event_details"
        android:width="130dp"
        android:background="@drawable/button_secondary_color"
        android:layout_marginLeft="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Date:"
        android:id="@+id/textView7"
        android:textStyle="bold"
        android:layout_below="@+id/creator_event_details"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="15dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/temp_date_event_details"
        android:layout_alignLeft="@+id/temp_creator_event_details"
        android:layout_alignBottom="@+id/textView7"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Duration:"
        android:id="@+id/textView8"
        android:textStyle="bold"
        android:layout_below="@+id/textView7"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="15dp"/>



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/temp_duration_event_details"
        android:layout_alignTop="@id/textView8"
        android:layout_alignLeft="@+id/temp_date_event_details"/>


</RelativeLayout>
