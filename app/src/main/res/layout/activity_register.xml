<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context="com.noms.noms.main_folder.register">


    <RelativeLayout
        android:background="@color/gray"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">

        <EditText
            android:id="@+id/first_name_reg"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="29dp"
            android:ellipsize="start"
            android:ems="10"
            android:gravity="center_horizontal"
            android:hint="first name"
            android:inputType="textPersonName"
            android:layout_below="@+id/textView3"
            android:layout_toLeftOf="@+id/BD_picker_reg"
            android:layout_toStartOf="@+id/BD_picker_reg" />

        <EditText
            android:id="@+id/last_name_reg"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:ellipsize="start"
            android:ems="10"
            android:gravity="center_horizontal"
            android:hint="last name"
            android:inputType="textPersonName"
            android:layout_alignTop="@+id/first_name_reg"
            android:layout_alignLeft="@+id/BY_picker_reg"
            android:layout_alignStart="@+id/BY_picker_reg" />

        <EditText
            android:id="@+id/email_reg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/first_name_reg"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:ellipsize="start"
            android:ems="10"
            android:gravity="center_horizontal"
            android:hint="email"
            android:inputType="textEmailAddress" />

        <EditText
            android:id="@+id/password_reg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/email_reg"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:ellipsize="start"
            android:ems="10"
            android:gravity="center_horizontal"
            android:hint="password"
            android:inputType="textPassword" />

        <EditText
            android:id="@+id/rep_password_reg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/password_reg"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:ellipsize="start"
            android:ems="10"
            android:gravity="center_horizontal"
            android:hint="repeat password"
            android:inputType="textPassword" />

        <NumberPicker
            android:id="@+id/BD_picker_reg"
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:layout_below="@+id/birthday_text_reg"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"/>

        <NumberPicker
            android:id="@+id/BY_picker_reg"
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:layout_alignTop="@+id/BD_picker_reg"
            android:layout_toEndOf="@+id/BD_picker_reg"
            android:layout_toRightOf="@+id/BD_picker_reg" />

        <NumberPicker
            android:id="@+id/BM_picker_reg"
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:layout_alignTop="@+id/BD_picker_reg"
            android:layout_toLeftOf="@+id/BD_picker_reg"
            android:layout_toStartOf="@+id/BD_picker_reg" />

        <TextView
            android:id="@+id/birthday_text_reg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/first_name_reg"
            android:layout_alignStart="@+id/first_name_reg"
            android:layout_below="@+id/rep_password_reg"
            android:layout_marginTop="30dp"
            android:text="Birthday"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/gender_text_reg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/birthday_text_reg"
            android:layout_alignStart="@+id/birthday_text_reg"
            android:layout_below="@+id/BM_picker_reg"
            android:layout_marginTop="40dp"
            android:text="Gender"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textStyle="bold" />

        <NumberPicker
            android:id="@+id/gender_picker_reg"
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:layout_below="@+id/gender_text_reg"
            android:layout_toLeftOf="@+id/BY_picker_reg"
            android:layout_toStartOf="@+id/BY_picker_reg"
            />

        <Button
            android:id="@+id/register_button_reg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/gender_picker_reg"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:text="register"
            android:background="@drawable/button_secondary_color"/>

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="General"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textStyle="bold"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

    </RelativeLayout>

</ScrollView>
