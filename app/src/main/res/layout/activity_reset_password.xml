<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.noms.noms.forgot_password_folder.reset_password"
    android:background="@color/gray">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/email_res_pass"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="52dp"
        android:ellipsize="start"
        android:gravity="center_horizontal"
        android:hint="email"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SEND"
        android:id="@+id/send_button_res_pass"
        android:layout_marginTop="75dp"
        android:layout_below="@+id/email_res_pass"
        android:layout_centerHorizontal="true"
        android:background="@drawable/button_secondary_color"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:id="@+id/reset_code_res_pass"
        android:layout_below="@+id/send_button_res_pass"
        android:layout_marginTop="77dp"
        android:ellipsize="start"
        android:gravity="center_horizontal"
        android:hint="reset code"
        android:layout_alignRight="@+id/email_res_pass"
        android:layout_alignEnd="@+id/email_res_pass"
        android:layout_alignLeft="@+id/email_res_pass"
        android:layout_alignStart="@+id/email_res_pass" />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="change password"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="40dp"
        android:width="160dp"
        android:id="@+id/change_pass_res_pass"
        android:background="@drawable/button_secondary_color"/>
</RelativeLayout>
